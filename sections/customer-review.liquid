<div class="customer-review-slider">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="review-card">
            <div class="customer-info">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 50 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="50"
                  height="50"
                  loading="lazy"
                >
              {% endif %}
              <div class="customer-rating">
                <h4>{{ block.settings.name }}</h4>
              </div>
            </div>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="swiper-pagination"></div>
  {% comment %}
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  {% endcomment %}
</div>

{% schema %}
{
  "name": "Customer Say Slider",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "section padding top",
      "max": 100,
      "min": 0,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "section padding bottom",
      "max": 100,
      "min": 0,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "section padding left",
      "max": 100,
      "min": 0,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "section padding right",
      "max": 100,
      "min": 0,
      "step": 1,
      "default": 0
    },
    {
      "type": "color",
      "id": "section_background",
      "label": "Section background"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "Isabella"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Card Background"
        },
        {
          "type": "range",
          "id": "padding-top",
          "label": "Padding top",
          "max": 100,
          "min": 0,
          "default": 20,
          "step": 1
        },
        {
          "type": "range",
          "id": "padding-bottom",
          "label": "Padding bottom",
          "max": 100,
          "min": 0,
          "default": 20,
          "step": 1
        },
        {
          "type": "range",
          "id": "padding-left",
          "label": "Padding left",
          "max": 100,
          "min": 0,
          "default": 20,
          "step": 1
        },
        {
          "type": "range",
          "id": "padding-right",
          "label": "Padding right",
          "max": 100,
          "min": 0,
          "default": 20,
          "step": 1
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Say Slider",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}

<style>
    .customer-review-slider{
        padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }} {{ section.settings.padding_left }};
        background: {{ section.settings.section_background }}
    }

  {% for block in section.blocks %}
  .review-card-{{ block.id }} {
      padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
      background: {{ block.settings.background_color }}
  }
  {% endfor %}
</style>

{% stylesheet %}
  .customer-info{
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .customer-info img{
    width: 50px;
    height: 50px;
  }
{% endstylesheet %}
